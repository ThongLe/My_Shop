= form_for(@member) do |f|
  - if @member.errors.any?
    #error_explanation
      %h2
        = pluralize(@member.errors.count, "error")
        prohibited this member from being saved:
      %ul
        - @member.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :year_of_birth
    %br/
    = f.number_field :year_of_birth
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .actions
    = f.submit
